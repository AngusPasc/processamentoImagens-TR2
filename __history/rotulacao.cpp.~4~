//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "rotulacao.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
    Form1->Color = clWhite;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::SpeedButton1Click(TObject *Sender)
{
	Image1->Picture->LoadFromFile("nova.bmp"); // Carregando imagem
	Image1->Stretch = true; //redimensiona
	Image1->Refresh(); //atualiza
}
//---------------------------------------------------------------------------
void __fastcall TForm1::SpeedButton2Click(TObject *Sender)
{
	int x, y;

	for (y = 0; y < Image1->Height; y++) {
		for (x = 0; x < Image1->Width; x++) {
			//cor = Image1->Canvas->Pixels[x][y];
			if(Image1->Canvas->Pixels[x][y] < RGB(127,127,127);){
			   Image1->Canvas->Pixels[x][y] = RGB(255,255,255);
			}
			else{
				Image1->Canvas->Pixels[x][y] = RGB(0,0,0);
			}
		}
	}
}
//---------------------------------------------------------------------------
